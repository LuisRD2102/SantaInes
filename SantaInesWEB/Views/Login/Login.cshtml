@model SantaInesWEB.Models.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/Login.css" />
    <link rel="stylesheet" href="~/css/Toaster.css" />
</head>

<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <!--Alerta de mensajes exitosos-->
        @if (Context.Request.Query["message"].Count() > 0)
        {
            <center>
                <div class="alert alert-success text-center alert-dismissible fade show p-3" role="alert">
                    <p class="fs-6 m-0">@Context.Request.Query["message"]</p>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </center>
        }
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img class="foto" src="~/img/cssi-rounded.jpg" alt="logo">
                                    <h4 class="titulo">Centro de Salud Santa Inés</h4>
                                </div>

                                @using (Html.BeginForm("LoginUsuario", "Login", FormMethod.Post))
                                {
                                   
                                    <div class="form mb-4">
                                        <input type="text" class="form-control" name="username" placeholder="Usuario" />
                                    </div>

                                    <div class="form mb-4">
                                        <input type="password" class="form-control" name="password" placeholder="Contraseña" />
                                    </div>

                                    <div class="area-boton">
                                        <button class="btn boton" type="submit">Iniciar Sesión</button>
                                        
                                    </div>
                                    @*<div class="password">
                                        <a class="text-muted" href="#!">¿Olvidó la contraseña?</a>
                                    </div>*@
                                    

                                    <div class="d-flex align-items-center justify-content-center pb-4 no-account">
                                        <p class="mb-0 me-2">¿No tienes cuenta?</p>
                                        <button type="button" class="btn btn-no-account"  onclick="location.href='@Url.Action("Registro","Registro")'">Registrate</button>
                                    </div>

                                }

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4 texto-titulo">Centro de Salud Santa Inés</h4>
                                <p class="small mb-0 texto">
                                    Somos la principal iniciativa en salud de la Universidad Católica Andrés Bello. 
                                    Fundado el 13 de septiembre de 1999, como un ambulatorio de atención primaria en salud, 
                                    de gestión privada, alta calidad y precios solidarios.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

