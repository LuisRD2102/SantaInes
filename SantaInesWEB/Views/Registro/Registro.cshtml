@model SantaInesWEB.Models.RegisterModel
@section scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>

    <script>
        $(function () {
            $("#telefono").mask("(999) 999-9999", { placeholder: "(###) ###-####" });
        })
    </script>
}

@{
        ViewData["Title"] = "Registro";
}

<h1>REGISTRO</h1>
<head>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>

<body>
    
@using (Html.BeginForm("RegistroExitoso","Registro",FormMethod.Post))
{
    <span>Nombre de usuario:</span> @Html.TextBoxFor(m => m.username)
    @Html.ValidationMessageFor(m => m.username ,null, new { @class = "text-danger" })
    <br />
    <br />

    <span>Contraseña: </span> @Html.PasswordFor(m => m.password)
    @Html.ValidationMessageFor(m => m.password ,null, new { @class = "text-danger" })
    <br />
    <br />

    <span>Repetir Contraseña: </span> @Html.PasswordFor(m => m.password2)
    @Html.ValidationMessageFor(m => m.password2 ,null, new { @class = "text-danger" })
    <br />
    <br />

    <span>Cédula: </span> @Html.TextBoxFor(m => m.cedula,new { type = "number" })
    @Html.ValidationMessageFor(m => m.cedula ,null, new { @class = "text-danger" })
    <br />
    <br />

    <span>Nombre(s): </span> @Html.TextBoxFor(m => m.nombre_Completo)
    @Html.ValidationMessageFor(m => m.nombre_Completo ,null, new { @class = "text-danger" })
    <br />
    <br />

    <span>Apellido(s): </span> @Html.TextBoxFor(m => m.apellido_Completo)
    @Html.ValidationMessageFor(m => m.apellido_Completo ,null, new { @class = "text-danger" })
    <br />
    <br />

    <span>Fecha de nacimiento: </span> @Html.TextBoxFor(m => m.fecha_Nacimiento,new { type = "date" })
    @Html.ValidationMessageFor(m => m.fecha_Nacimiento ,null, new { @class = "text-danger" })
    <br />
    <br />

    <span>Género: </span> @Html.DropDownListFor(m => m.sexo, new List<SelectListItem>
       {
            new SelectListItem { Text = "M", Value = "M"},
            new SelectListItem { Text = "F", Value = "F"},
       }, "Selecionar género")
    @Html.ValidationMessageFor(m => m.sexo ,null, new { @class = "text-danger" })
    <br />
    <br />

        <span>Teléfono: </span> @Html.TextBoxFor(m => m.telefono)
    @Html.ValidationMessageFor(m => m.telefono ,null, new { @class = "text-danger", @placeholder = "(###) ###-####" })
    <br />
    <br />

    <span>Email: </span> @Html.TextBoxFor(m => m.email, new { placeholder = "example@gmail.com" })
    @Html.ValidationMessageFor(m => m.email ,"",new { @class = "text-danger" })
    <br />
    <br />

    <input type="submit" value="Crear Cuenta" />
  
}
</body>

