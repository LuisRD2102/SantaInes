@model Tuple<SantaInesWEB.Models.UsuarioModel, SantaInesWEB.Models.DireccionModel>

<head>
	<link rel="stylesheet" type="text/css" href="~/css/montserrat-font.css">
	<link rel="stylesheet" type="text/css" href="~/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">	
    <link rel="stylesheet" href="~/css/styles.css"/>
	
	<script src="https://kit.fontawesome.com/34fd9ed5f9.js" crossorigin="anonymous"></script>
</head>

@section scripts{
	<script src="~/js/Registro.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
	
	<script>
        $(function () {
            $("#telefono").mask("(999) 999-9999");
        })

		document.querySelector('#fecha').onchange = function () {
			this.style.color = "black";
		}

		$('.empty').blur(function () {
			if (!$(this).val()) {
				$('.empty').addClass('input-danger');
				console.log('Hola');
			}
			else $('.empty').removeClass('input-danger');
		})

	</script>	
}

	<div class="page-content">
		<div class="form-v10-content">

			@using (Html.BeginForm("RegistroExitoso", "Registro", FormMethod.Post, new { id = "myform", Class="form-detail"})){
			
			@*<form class="form-detail" asp-action="RegistroExitoso" asp-controller="Registro" method="post" id="myform">*@
				<div class="form-left">
					<h2>Información General</h2>
				
					<div class="form-row">
						@*<input type="number" class="cedula empty" name="cedula" placeholder="Cédula" required>*@
						@Html.TextBoxFor(m => m.Item1.cedula, new{Placeholder = "Cédula", Class = "empty", type="number"})
						@Html.ValidationMessageFor(m => m.Item1.cedula ,null, new { @class = "text-danger" })
						
					</div>
					<div class="form-group">
						<div class="form-row form-row-1">
							<input type="text" name="nombre_Completo" placeholder="Nombre(s)" required>
							@*@Html.TextBoxFor(m => m.Item1.nombre_Completo, new{Placeholder = "Nombre(s)" })
							@Html.ValidationMessageFor(m => m.Item1.nombre_Completo ,null, new { @class = "text-danger" })	*@						
						</div>
						<div class="form-row form-row-2">
							<input type="text" name="apellido_Completo" placeholder="Apellido(s)" required>
							@*@Html.TextBoxFor(m => m.Item1.apellido_Completo, new{Placeholder = "Apellido(s)" })
							@Html.ValidationMessageFor(m => m.Item1.apellido_Completo ,null, new { @class = "text-danger" })*@
					</div>
					</div>					
					<div class="form-row">
						<input type="date" id = "fecha" style="color:#666" name="fecha_Nacimiento" placeholder="Fecha de nacimiento" min="1940-01-01" required>
					</div>
					
					<div class="form-group">
						<div class="form-row form-row-3">
							<input type="text" name="telefono" id="telefono" placeholder="Teléfono" required>
						@*@Html.TextBoxFor(m => m.Item1.telefono, new{Placeholder = "Teléfono", id = "telefono"})
							@Html.ValidationMessageFor(m => m.Item1.telefono ,null, new { @class = "text-danger" })*@
						</div>
						<div class="form-row form-row-4">
						<select name="sexo">
							<option value="sexo">Sexo</option>
							<option value="M">Masculino</option>
							<option value="F">Femenino</option>
						</select>
							<span class="select-btn">
								<i class="zmdi zmdi-chevron-down"></i>
							</span>
						</div>
					</div>
					
					<h2>Información de Usuario</h2>
					<div class="form-row">
						<input type="text" name="username" placeholder="Usuario" required>
						@*@Html.TextBoxFor(m => m.Item1.username, new{Placeholder = "Usuario" })
						@Html.ValidationMessageFor(m => m.Item1.username ,null, new { @class = "text-danger" })*@
					</div>
					<div class="form-group">
						<div class="form-row form-row-1">
							<input type="password" name="password" placeholder="Contraseña" required>
							@*@Html.TextBoxFor(m => m.Item1.password, new{Placeholder = "Contraseña" })
							@Html.ValidationMessageFor(m => m.Item1.password ,null, new { @class = "text-danger" })*@
						</div>
						<div class="form-row form-row-2">
							<input type="password" name="password2" placeholder="Repita la Contraseña" required>
							@*@Html.TextBoxFor(m => m.Item1.password2, new{Placeholder = "Repita la Contraseña" })
							@Html.ValidationMessageFor(m => m.Item1.password2 ,null, new { @class = "text-danger" })*@
						</div>
					</div>
					<div class="form-row" style="margin-bottom:80px;">
						<input type="email" name="email" placeholder="Email" required>
						@*@Html.TextBoxFor(m => m.Item1.email, new{Placeholder = "Email" })
						@Html.ValidationMessageFor(m => m.Item1.email ,null, new { @class = "text-danger" })*@
					</div>

					
				</div>

				<div class="form-right">
					<h2>Información Domiciliaria</h2>
					<div class="form-row form-row-2">
						<select name="estado">
							<option value="estado">Estado</option>
							<option value="Amazonas">Amazonas</option>
							<option value="Anzoategui">Anzoátegui</option>
							<option value="Apure">Apure</option>
							<option value="Aragua">Aragua</option>
							<option value="Barinas">Barinas</option>
							<option value="Bolívar">Bolívar</option>
							<option value="Carabobo">Carabobo</option>
							<option value="Cojedes">Cojedes</option>
							<option value="Delta Amacuro">Delta Amacuro</option>
							<option value="Distrito Federal">Distrito Federal</option>
							<option value="Falcon">Falcón</option>
							<option value="Guarico">Guárico</option>
							<option value="Lara">Lara</option>
							<option value="Mérida">Mérida</option>
							<option value="Miranda">Miranda</option>
							<option value="Monagas">Monagas</option>
							<option value="Nueva Esparta">Nueva Esparta</option>
							<option value="Portuguesa">Portuguesa</option>
							<option value="Sucre">Sucre</option>
							<option value="Tachira">Táchira</option>
							<option value="Trujillo">Trujillo</option>
							<option value="Vargas">Vargas</option>
							<option value="Yaracuy ">Yaracuy </option>
							<option value="Zulia">Zulia</option>
						</select>
						<span class="select-btn">
							<i class="zmdi zmdi-chevron-down"></i>
						</span>
					</div>
					<div class="form-row">
						<input type="text" name = "municipio" placeholder="Municipio" required>
					</div>
										
					<div class="form-row">
						<input type="number" name="cod_postal" placeholder="Código Postal" required>
					</div>

					<div class="form-row">
						<textarea name="direccion" placeholder="Dirección" required></textarea>
					</div>					
				
					
					<center class="form-row-last">
						<input type="submit" name="register" class="register" value="Registrar">
					</center>
				</div>
			}
			@*</form>*@

			
		</div>
	</div>

