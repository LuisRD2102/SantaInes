@model Tuple<SantaInesWEB.Models.UsuarioModel, SantaInesWEB.Models.DireccionModel>

<head>
	<link rel="stylesheet" type="text/css" href="~/css/montserrat-font.css">
	<link rel="stylesheet" type="text/css" href="~/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">	
    <link rel="stylesheet" href="~/css/styles.css"/>
	
	<script src="https://kit.fontawesome.com/34fd9ed5f9.js" crossorigin="anonymous"></script>
</head>

@section scripts{
	<script src="~/js/Registro.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
	
	<script>
        $(function () {
            $("#telefono").mask("(999) 999-9999");
        })

		document.querySelector('#fecha').onchange = function () {
			this.style.color = "black";
		}

		$('.empty').blur(function () {
			if (!$(this).val()) {
				$('.empty').addClass('input-danger');
				console.log('Hola');
			}
			else $('.empty').removeClass('input-danger');
		})

	</script>	
}

	<div class="page-content">
		<div class="form-v10-content">

			@using (Html.BeginForm("RegistroExitoso", "Registro", FormMethod.Post, new { id = "myform", Class="form-detail"})){
				<div class="form-left">
					<h2>Información General</h2>
				
					<div class="form-row">
						@Html.TextBoxFor(m => m.Item1.cedula, new{Placeholder = "Cédula", Class = "empty", type="number"})
						@Html.ValidationMessageFor(m => m.Item1.cedula ,null, new { @class = "text-danger" })
					</div>

					<div class="form-group">
						<div class="form-row form-row-1">
							@Html.TextBoxFor(m => m.Item1.nombre_Completo, new{Placeholder = "Nombre(s)" })
							@Html.ValidationMessageFor(m => m.Item1.nombre_Completo ,null, new { @class = "text-danger" })					
						</div>

						<div class="form-row form-row-2">
							@Html.TextBoxFor(m => m.Item1.apellido_Completo, new{Placeholder = "Apellido(s)" })
							@Html.ValidationMessageFor(m => m.Item1.apellido_Completo ,null, new { @class = "text-danger" })
						</div>
					</div>
					
					<div class="form-row">
					@Html.TextBoxFor(m => m.Item1.fecha_Nacimiento ,new{type = "date", style = "color:#666" })
					@Html.ValidationMessageFor(m => m.Item1.fecha_Nacimiento, null, new { @class = "text-danger"})
					</div>
					
					<div class="form-group">
						<div class="form-row form-row-3">
						@Html.TextBoxFor(m => m.Item1.telefono, new{Placeholder = "Teléfono", id = "telefono"})
						@Html.ValidationMessageFor(m => m.Item1.telefono ,null, new { @class = "text-danger" })
						</div>
						<div class="form-row form-row-4">
							@Html.DropDownListFor(m => m.Item1.sexo, new List<SelectListItem>{
								new SelectListItem{Value = "", Text = "Sexo"},
								new SelectListItem{Value = "M", Text = "Masculino"},
								new SelectListItem{Value = "F", Text = "Femenino"}
							})
							@Html.ValidationMessageFor(m => m.Item1.sexo ,null, new { @class = "text-danger" })
							<span class="select-btn">
								<i class="zmdi zmdi-chevron-down"></i>
							</span>
						</div>
					</div>
					
					<h2>Información de Usuario</h2>
					<div class="form-row">
						@Html.TextBoxFor(m => m.Item1.username, new{Placeholder = "Usuario" })
						@Html.ValidationMessageFor(m => m.Item1.username ,null, new { @class = "text-danger" })
					</div>

					<div class="form-group">
						<div class="form-row form-row-1">
							@Html.PasswordFor(m => m.Item1.password, new{Placeholder = "Contraseña" })
							@Html.ValidationMessageFor(m => m.Item1.password ,null, new { @class = "text-danger" })
						</div>

						<div class="form-row form-row-2">
						@Html.PasswordFor(m => m.Item1.password2, new{Placeholder = "Repita la Contraseña" })
						@Html.ValidationMessageFor(m => m.Item1.password2 ,null, new { @class = "text-danger"})
						</div>
					</div>

					<div class="form-row" style="margin-bottom:80px;">
						@Html.TextBoxFor(m => m.Item1.email, new{Placeholder = "Email" })
						@Html.ValidationMessageFor(m => m.Item1.email ,null, new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-right">
					<h2>Información Domiciliaria</h2>
					<div class="form-row form-row-2">
							@Html.DropDownListFor(m => m.Item2.estado, new List<SelectListItem>{
								new SelectListItem{Value = "", Text = "Estado"},
								new SelectListItem{Value = "Amazonas", Text = "Amazonas"},
								new SelectListItem{Value = "Anzoategui", Text = "Anzoategui"},
								new SelectListItem{Value = "Apure", Text = "Apure"},
								new SelectListItem{Value = "Aragua", Text = "Aragua"},
								new SelectListItem{Value = "Barinas", Text = "Barinas"},
								new SelectListItem{Value = "Bolívar", Text = "Bolívar"},
								new SelectListItem{Value = "Carabobo", Text = "Carabobo"},
								new SelectListItem{Value = "Cojedes", Text = "Cojedes"},
								new SelectListItem{Value = "Delta Amacuro", Text = "Delta Amacuro"},
								new SelectListItem{Value = "Distrito Federal", Text = "Distrito Federal"},
								new SelectListItem{Value = "Falcon", Text = "Falcon"},
								new SelectListItem{Value = "Guarico", Text = "Guarico"},
								new SelectListItem{Value = "Lara", Text = "Lara"},
								new SelectListItem{Value = "Mérida", Text = "Mérida"},
								new SelectListItem{Value = "Miranda", Text = "Miranda"},
								new SelectListItem{Value = "Monagas", Text = "Monagas"},
								new SelectListItem{Value = "Nueva Esparta", Text = "Nueva Esparta"},
								new SelectListItem{Value = "Portuguesa", Text = "Portuguesa"},
								new SelectListItem{Value = "Sucre", Text = "Sucre"},
								new SelectListItem{Value = "Tachira", Text = "Tachira"},
								new SelectListItem{Value = "Trujillo", Text = "Trujillo"},
								new SelectListItem{Value = "Vargas", Text = "Vargas"},
								new SelectListItem{Value = "Yaracuy", Text = "Yaracuy"},
								new SelectListItem{Value = "Zulia", Text = "Zulia"},
						})
						@Html.ValidationMessageFor(m => m.Item2.estado ,null, new { @class = "text-danger" })
						<span class="select-btn">
							<i class="zmdi zmdi-chevron-down"></i>
						</span>
					</div>
					<div class="form-row">
						@Html.TextBoxFor(m => m.Item2.municipio, new{Placeholder = "Municipio" })
						@Html.ValidationMessageFor(m => m.Item2.municipio ,null, new { @class = "text-danger" })
					</div>
										
					<div class="form-row">
						@Html.TextBoxFor(m => m.Item2.codPostal, new{Placeholder = "Código postal", type = "number" })
					@Html.ValidationMessageFor(m => m.Item2.codPostal ,null, new { @class = "text-danger" })
					</div>

					<div class="form-row">
						@Html.TextBoxFor(m => m.Item2.direccion, new{Placeholder = "Dirección" })
						@Html.ValidationMessageFor(m => m.Item2.direccion ,null, new { @class = "text-danger" })
					</div>										
					<center class="form-row-last">
						<input type="submit" name="register" class="register" value="Registrar">
					</center>
				</div>
			}			
		</div>
	</div>

