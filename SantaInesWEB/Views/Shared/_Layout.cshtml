<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="UTF-8">
    
    <title>@ViewData["Title"] - SantaInesWEB</title>
    <link rel="stylesheet" href="~/css/style.css">
    @*<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/SantaInesWEB.styles.css" asp-append-version="true" />
    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
   </head>
<body>
  <div class="sidebar">

    <div class="logo-details">
        <div class="logo-inner-details">
            <img class="foto" src="~/img/cssi-rounded.jpg" />
            <div class="logo_name">Santa Inés</div>
        </div>   
        <i class='bx bx-menu' id="btn" ></i>
    </div>

    <ul class="nav-list">
        <li>
           <i class='bx bx-search' ></i>
           <input type="text" placeholder="Search...">
           <span class="tooltip">Search</span>
        </li>
        <li>
          <a asp-controller="Home" asp-action="Index">
            <i class='bx bx-grid-alt'></i>
            <span class="links_name">Dashboard</span>
          </a>
           <span class="tooltip">Dashboard</span>
        </li>
        <li>
         <a asp-controller="Registro" asp-action="Registro">
           <i class='bx bx-user' ></i>
           <span class="links_name" >Registro</span>
         </a>
         <span class="tooltip">Registro</span>
        </li>
        <li>
         <a asp-controller="Empleados" asp-action="GestionEmpleados">
           <i class='bx bx-buildings' ></i>
           <span class="links_name">Empleados</span>
         </a>
                <span class="tooltip">Empleados</span>
        </li>
        <li>
         <a a asp-controller="Prueba" asp-action="PruebaDepartamento">
           <i class='bx bx-pie-chart-alt-2' ></i>
           <span class="links_name">Prueba</span>
         </a>
                <span class="tooltip">Prueba</span>
        </li>
        <li>
         <a href="#">
           <i class='bx bx-folder' ></i>
           <span class="links_name">File Manager</span>
         </a>
         <span class="tooltip">Files</span>
        </li>
        <li>
         <a href="#">
           <i class='bx bx-cart-alt' ></i>
           <span class="links_name">Order</span>
         </a>
         <span class="tooltip">Order</span>
        </li>
        <li>
         <a href="#">
           <i class='bx bx-heart' ></i>
           <span class="links_name">Saved</span>
         </a>
         <span class="tooltip">Saved</span>
        </li>
        <li>
         <a href="#">
           <i class='bx bx-cog' ></i>
           <span class="links_name">Setting</span>
         </a>
         <span class="tooltip">Setting</span>
        </li>
         <li class="profile">
             <a asp-controller ="Login" asp-action="Login" class="log-out">
                 <div class="profile-details">           
                    <div class="name_job">
                            <div class="name">@Context.Session.GetString("nombre_completo").Split(' ').First()  @Context.Session.GetString("apellido_completo")[0].</div>
                        <div class="job">@Context.Session.GetString("rol")</div>
                    </div>
                 </div>
                 <i class='bx bx-log-out' id="log_out" ></i>
             </a>
         </li>
    </ul>

  </div>
  <section class="home-section">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
  </section>

    <script src="~/js/script.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

