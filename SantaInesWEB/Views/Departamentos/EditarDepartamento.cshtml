@model SantaInesWEB.Models.DepartamentoModel

@{
    ViewData["Title"] = "Editar Departamento";
}

<head>
    <title>@ViewData["Editar Departamento"]</title>
</head>


<!-- Ventana Emergente -->
<div class="modal fade" id="popUpEditar" tabindex="-1" role="dialog" aria-labelledby="popUpEditarTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Editar Departamento</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("ModificarDepartamento", "Departamentos", FormMethod.Post))
            {
                <div class="modal-body">
                    @Html.TextBoxFor(m => m.id, new { @Value = Model.id, @type="hidden"})
                    <span>Nombre: </span>
                    @Html.TextBoxFor(m => m.nombre, new { @Value = Model.nombre, Class="form-control", placeholder="Nombre: "})
                    @Html.ValidationMessageFor(m => m.nombre ,null, new { @class = "text-danger" })
                    <span style="margin-top:15px">Descripcion: </span>
                    @Html.TextAreaFor(m => m.descripcion, new { @Value = Model.descripcion, Class="form-control", placeholder="Nombre: "})
                    @Html.ValidationMessageFor(m => m.descripcion ,null, new { @class = "text-danger" })
                    <br />
                </div>
                <div class="modal-footer">
                    <button type="button" class="botonCancelar" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="botonCrear">Editar</button>
                </div>
            }

        </div>
    </div>
</div>
