<div class="modal fade" id="popUpAgregar" tabindex="-1" role="dialog" aria-labelledby="popUpAgregarTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Agregar Departamento</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("GuardarDepartamento", "Departamentos", FormMethod.Post))
            {
                <div class="modal-body">

                    @Html.TextBoxFor(m => m.nombre, new {Class="form-control", placeholder="Nombre: "})
                    @Html.ValidationMessageFor(m => m.nombre ,null, new { @class = "text-danger" })
                    <br />
                    @Html.TextAreaFor(m => m.descripcion, new {Class="form-control", placeholder="Descripción: "})
                    @Html.ValidationMessageFor(m => m.descripcion ,null, new { @class = "text-danger" })
                    <br />

                </div>
                <div class="modal-footer">
                    <button type="button" class="botonCancelar" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="botonCrear">Crear</button>
                </div>
            }
        </div>
    </div>
</div>


